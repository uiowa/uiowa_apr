/**
 * Implements hook_node_view().
 */
function uiowa_apr_node_view($node, $view_mode, $langcode) {
  if($node->type == 'apr_profile' && $view_mode == 'full'){

    if(variable_get('uiowa_apr_api_key') && variable_get('uiowa_apr_population_id')){

      $api_key = variable_get('uiowa_apr_api_key');
      $population_id = variable_get('uiowa_apr_population_id');

      $request = drupal_http_request('https://apps.its.uiowa.edu/facadmin/api/info/?key='.$api_key.'&population_id='.$population_id.'&format=json&hawkid='.$node->apr_profile_hawkid[LANGUAGE_NONE][0]['value']
);  
      $person = drupal_json_decode($request->data);    
      dpm($person);
      $extra = uiowa_apr_field_extra_fields();

      $config = field_bundle_settings('node', $node->type);

      foreach ($extra['node'][$node->type]['display'] as $field_name => $field_info) {
        // Check to make sure this field is visible in this view mode.
        if (empty($config['extra_fields']['display'][$field_name][$view_mode]['visible'])) {
          continue;
        }
        
        switch ($field_name) {
          case 'apr_profile_past_history':
            $data = array();
            if(count($person['pasthist']) > 0){
              foreach($person['pasthist'] as $item) {        
                if($item['include_on_profile'] == 'Yes'){
                  $data[] = $item['title'];
                }
              };
              $node->content[$field_name] = array(
                '#field_name' => 'apr_profile_past_history',
                '#markup' => theme('apr_profile_past_history', array('data' => $data)),
              );
            }

            break;

          case 'apr_profile_contact_information': 
            $data = array();
            
            if(isset($person['pci']['alt_contacts'])){    
              foreach($person['pci']['alt_contacts'] as $address){            
                $data[] = $address;
              }

              $node->content[$field_name] = array(
                '#field_name' => 'apr_profile_contact_information',
                '#markup' => theme('apr_profile_contact_information', array('data' => $data)),
              );
            }
            break;
        }
      }
    }
  }
}

/**
 * Implements hook_theme().
 */
function uiowa_apr_theme() {
  $path = drupal_get_path('module', 'uiowa_apr');
  return array(
    'apr_profile_past_history' => array(
      'path' => $path,
      'template' => 'theme/apr_profile_past_history',
      'variables' => array('data' => NULL),
    ),
    'apr_profile_contact_information' => array(
      'path' => $path,
      'template' => 'theme/apr_profile_contact_information',
      'variables' => array('data' => NULL),
    ),
  );
}