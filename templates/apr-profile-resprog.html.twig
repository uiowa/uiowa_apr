{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of research interest information from resprog[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-resprog"{{ attributes }}>
  <div class="field-label">Areas of Research Interest</div>
  <ul class="field-items">
    {% for key, item in data %}
      <li class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% set output = '' %}
        {% if item.title is not empty %}
          {% set output = output ~ item.title %}
        {% endif %}
        {% if item.desc is not empty %}
          {% set output = output ~ ': ' ~ item.desc %}
        {% endif %}
        {{ output }}
      </li>
    {% endfor %}
  </ul>
</div>

{% endif %}
