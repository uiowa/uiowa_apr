{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of professional membership information from member[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-member"{{ attributes }}>
  <h2 class="field-header">Professional Memberships</h2>
  <ul class="field-items">
    {% for key, item in data %}
      <li class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% set output = '' %}
        {% if item.org is not empty %}
          {% set output = output ~ item.org %}
        {% endif %}
        {% if item.orgabbr is not empty %}
          {% set output = output ~ ' (' ~ item.orgabbr ~ ')' %}
        {% endif %}
        {% if item.start_date is not empty %}
          {% set output = output ~ ', ' ~ item.start_date|date("Y") %}
        {% endif %}
        {{ output }}
      </li>
    {% endfor %}
  </ul>
</div>

{% endif %}
