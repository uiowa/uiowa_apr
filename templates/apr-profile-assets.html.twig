{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of assets information from pci.assets[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-assets"{{ attributes }}>
  <div class="field-items">
    {% for key, item in data %}
      <div class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% if item.uri is not empty %}
          {% set image = {
            '#theme':      'imagecache_external',
            '#style_name': 'apr_profile_image',
            '#uri':        item.uri,
            '#alt':        'alt_text',
            '#attributes': { },
          } %}
          {{ image }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% endif %}
