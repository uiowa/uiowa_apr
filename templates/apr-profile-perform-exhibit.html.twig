{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of performance and exhibit information from perform_exhibit[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-perform-exhibit"{{ attributes }}>
  <h2 class="field-header">Selected Performances and Exhibits</h2>
  <ul class="field-items">
    {% for key, item in data %}
      <li class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% if item.formatted is not empty %}
          {{ item.formatted|raw }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>

{% endif %}
