{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of review and editorial work information from editrev[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-editrev"{{ attributes }}>
  <h2 class="field-header">Selected Review and Editorial Work</h2>
  <ul class="field-items">
    {% for key, item in data %}
      <li class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% set output = '' %}
        {% if item.role is not empty %}
          {% set output = output ~ item.role %}
          {% if item.title is not empty %}
            {% set output = output ~ ', ' ~ item.title %}
          {% endif %}
        {% elseif item.title is not empty %}
          {% set output = output ~ item.title %}
        {% endif %}
        {% if item.start_date is not empty %}
          {% set output = output ~ ', ' ~ item.start_date|date("F Y") %}
          {% if (item.end_date is not empty) and (item.start_date|date("F Y") != item.end_date|date("F Y")) %}
            {% set output = output ~ ' - ' ~ item.end_date|date("F Y") %}
          {% endif %}
        {% elseif item.end_date is not empty %}
          {% set output = output ~ ', ' ~ item.end_date|date("F Y") %}
        {% endif %}
        {{ output }}
      </li>
    {% endfor %}
  </ul>
</div>

{% endif %}
