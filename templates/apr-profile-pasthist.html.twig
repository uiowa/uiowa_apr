{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of past history information from pasthist[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-pasthist"{{ attributes }}>
  <div class="field-items">
    {% for key, item in data %}
      <div class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% set output = '' %}
        {% if item.title is not empty %}
          {% set output = output ~ item.title %}
        {% endif %}
        {% if item.dep is not empty %}
          {% set output = output ~ ', ' ~ item.dep %}
        {% endif %}
        {% if item.org is not empty %}
          {% set output = output ~ ', ' ~ item.org %}
        {% endif %}
        {% if item.city is not empty %}
          {% set output = output ~ ', ' ~ item.city %}
        {% endif %}
        {% if item.state is not empty %}
          {% set output = output ~ ', ' ~ item.state %}
        {% endif %}
        {% if item.country is not empty %}
          {% set output = output ~ ', ' ~ item.country %}
        {% endif %}
        {% if item.start_date is not empty %}
          {% set output = output ~ ', ' ~ item.start_date|date("F Y") %}
          {% if (item.end_date is not empty) and (item.start_date|date("F Y") != item.end_date|date("F Y")) %}
            {% set output = output ~ ' - ' ~ item.end_date|date("F Y") %}
          {% endif %}
          {% if item.end_date is empty %}
            {% set output = output ~ ' - Present' %}
          {% endif %}
        {% elseif item.end_date is not empty %}
          {% set output = output ~ ', ' ~ item.end_date|date("F Y") %}
        {% endif %}
        {{ output }}
      </div>
    {% endfor %}
  </div>
</div>

{% endif %}
