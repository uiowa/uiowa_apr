{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of website information from pci.websites[] array.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-websites"{{ attributes }}>
  <h2 class="field-header">Websites</h2>
  <div class="field-items">
    {% for key, item in data %}
      <div class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% set output = '' %}
        {% if item.url is not empty %}
          {% set output = output ~ '<a href="' ~ item.url ~ '">' %}
        {% endif %}
        {% if item.desc is not empty %}
          {% set output = output ~ item.desc %}
        {% elseif item.type is not empty %}
          {% set output = output ~ item.type %}
        {% elseif item.url is not empty %}
          {% set output = output ~ item.url %}
        {% endif %}
        {% if item.url is not empty %}
          {% set output = output ~ '</a>' %}
        {% endif %}
        {{ output|raw }}
      </div>
    {% endfor %}
  </div>
</div>

{% endif %}
