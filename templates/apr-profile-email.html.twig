{#
/**
 * @file
 * Default theme implementation for the APR Profile pseudo-fields.
 *
 * Available variables
 * - data: Array of email from pci.info.email.
 */
#}

{% if data is not empty %}

<div class="field field-name-apr-profile-email"{{ attributes }}>
  <div class="field-items">
    {% for key, item in data %}
      <div class="field-item {{ loop.index is odd ? 'odd' : 'even' }}">
        {% if item is not empty %}
          {{ link(item, 'mailto:' ~ item) }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% endif %}
